//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "Math.h"

using namespace std;



int main()
{
	int suma,N;
	float i;
	cout<< "ingresar el valor de N: ";
	cin>> N;
	suma=0;
	cout<<"\nsuma= ";
	for (i=2;i<=N;i=1+2)
	{
		suma=suma+i;
	    cout<<i<<"+ ";
	}
	cout<< "\nLa suma de los "<<N<< " Primeros numeros es: " << suma;
	getch();
	return 0;
}
