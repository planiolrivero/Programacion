#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;



void main()
{
 int num1,num2, res;
 cout<< "ingrese num1: ";
 cin>> num1;
 cout<< "ingrese num2: ";
 cin>> num2;
 if ((num1 % 2 != 0)&&(num2% 2!= 0))
	  res=num1+num2;
 else
  res=num1*num2;
  cout<< res;
  getch();
}
